<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <Property name="LOG_PATTERN">%d{HH:mm:ss.SSS} [%t] %-5level %c{1} - %msg%n</Property>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{${LOG_PATTERN}}{INFO=green, WARN=yellow bold, ERROR=red bold}" />
    </Console>

    <!-- Async Console Appender -->
    <Async name="AsyncConsole" bufferSize="8192" includeLocation="false">
      <AppenderRef ref="Console"/>
    </Async>
  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="AsyncConsole" />
    </Root>
  </Loggers>
</Configuration>
