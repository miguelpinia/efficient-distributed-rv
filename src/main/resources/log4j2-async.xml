<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    <Property name="LOG_DIR">logs</Property>
  </Properties>

  <Appenders>
    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{${LOG_PATTERN}}{INFO=green, WARN=yellow bold, ERROR=red bold}"/>
    </Console>

    <!-- Async Console Appender -->
    <Async name="AsyncConsole" bufferSize="8192" includeLocation="false">
      <AppenderRef ref="Console"/>
    </Async>

    <!-- Rolling File Appender for Events -->
    <RollingFile name="EventFile"
                 fileName="${LOG_DIR}/events.log"
                 filePattern="${LOG_DIR}/events-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="100MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
    </RollingFile>

    <!-- Async Event File Appender -->
    <Async name="AsyncEventFile" bufferSize="16384" includeLocation="false">
      <AppenderRef ref="EventFile"/>
    </Async>
  </Appenders>

  <Loggers>
    <!-- Event-specific logger -->
    <Logger name="phd.distributed.events" level="DEBUG" additivity="false">
      <AppenderRef ref="AsyncEventFile"/>
    </Logger>

    <!-- Performance logger -->
    <Logger name="phd.distributed.performance" level="INFO" additivity="false">
      <AppenderRef ref="AsyncEventFile"/>
    </Logger>

    <!-- Root logger -->
    <Root level="INFO">
      <AppenderRef ref="AsyncConsole"/>
    </Root>
  </Loggers>
</Configuration>
